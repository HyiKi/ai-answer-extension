{
  "name": "AI Answer",
  "description": "Give an answer after selecting text",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/dialog.css"]
    }
  ],
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "QA.png"
  },
  "host_permissions": ["*://api.hyiki.sbs/*"]
}
